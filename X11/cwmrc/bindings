bind-mouse 4-4        window-raise
bind-mouse 4-5        window-lower

bind-key 4C-q         lock
bind-key 4C-r         restart
bind-key 4CS-q        quit

bind-key 4C-f         window-fullscreen

bind-key 4-space      menu-cmd
bind-key 4-F1         menu-window
bind-key 4-F2         menu-exec
bind-key 4-F4         window-close

bind-key 4M-l         window-menu-label
bind-key 4-m          window-hide

bind-key 4-Up         window-snap-up
bind-key 4-Down       window-snap-down
bind-key 4-Left       window-snap-left
bind-key 4-Right      window-snap-right

bind-key 4S-Up        window-vmaximize
bind-key 4S-Down      window-vmaximize
bind-key 4S-Left      window-hmaximize
bind-key 4S-Right     window-hmaximize

bind-key 4-Tab        window-cycle
bind-key 4S-Tab       window-rcycle
bind-key 4-grave      window-cycle-inclass
bind-key 4S-grave     window-rcycle-inclass

bind-key 4-1          group-only-1
